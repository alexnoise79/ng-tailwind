{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "apps",
  "projects": {
    "ui-demo": {
      "projectType": "application",
      "schematics": {
        "@schematics/angular:component": {
          "style": "css",
          "standalone": true
        }
      },
      "root": "apps/ui-demo",
      "sourceRoot": "apps/ui-demo/src",
      "prefix": "app",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:application",
          "options": {
            "outputPath": "dist/apps/ui-demo",
            "index": "apps/ui-demo/src/index.html",
            "browser": "apps/ui-demo/src/main.ts",
            "polyfills": ["zone.js"],
            "tsConfig": "apps/ui-demo/tsconfig.app.json",
            "assets": ["apps/ui-demo/src/favicon.ico", "apps/ui-demo/src/assets"],
            "styles": ["apps/ui-demo/src/styles.css"],
            "scripts": []
          },
          "configurations": {
            "production": {
              "budgets": [
                {
                  "type": "initial",
                  "maximumWarning": "500kb",
                  "maximumError": "1mb"
                },
                {
                  "type": "anyComponentStyle",
                  "maximumWarning": "2kb",
                  "maximumError": "4kb"
                }
              ],
              "outputHashing": "all",
              "baseHref": "/ng-tailwind/"
            },
            "development": {
              "optimization": false,
              "extractLicenses": false,
              "sourceMap": true
            }
          },
          "defaultConfiguration": "production"
        },
        "serve": {
          "builder": "@angular-devkit/build-angular:dev-server",
          "configurations": {
            "production": {
              "buildTarget": "ui-demo:build:production"
            },
            "development": {
              "buildTarget": "ui-demo:build:development"
            }
          },
          "defaultConfiguration": "development"
        }
      }
    },
    "ui-components": {
      "projectType": "library",
      "root": "libs/ui-components",
      "sourceRoot": "libs/ui-components/src",
      "prefix": "ui",
      "architect": {
        "build": {
          "builder": "@nx/angular:package",
          "outputs": ["{workspaceRoot}/dist/libs/ui-components"],
          "options": {
            "project": "libs/ui-components/ng-package.json"
          }
        },
        "test": {
          "builder": "@nx/jest:jest",
          "outputs": ["{workspaceRoot}/coverage/libs/ui-components"],
          "options": {
            "jestConfig": "libs/ui-components/jest.config.ts",
            "passWithNoTests": true
          }
        },
        "lint": {
          "builder": "@nx/eslint:lint",
          "options": {
            "lintFilePatterns": ["libs/ui-components/**/*.ts", "libs/ui-components/**/*.html"]
          }
        },
        "storybook": {
          "builder": "@storybook/angular:start-storybook",
          "options": {
            "port": 4400,
            "configDir": ".storybook",
            "browserTarget": "ui-demo:build",
            "tsConfig": ".storybook/tsconfig.json",
            "compodoc": false
          },
          "configurations": {
            "ci": {
              "quiet": true
            }
          }
        },
        "build-storybook": {
          "builder": "@storybook/angular:build-storybook",
          "options": {
            "outputDir": "dist/storybook/ui-components",
            "configDir": ".storybook",
            "browserTarget": "ui-demo:build",
            "tsConfig": ".storybook/tsconfig.json",
            "compodoc": false
          }
        }
      }
    }
  }
}
